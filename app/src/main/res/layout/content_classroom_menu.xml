<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ClassMenuActivity"
    tools:showIn="@layout/app_bar_main">

    <Button
        android:id="@+id/btnViewGroupStudent"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:text="กลุ่ม"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@+id/btnViewMember"
        app:layout_constraintStart_toStartOf="@+id/btnViewMember"
        app:layout_constraintTop_toBottomOf="@+id/btnViewMember" />

    <Button
        android:id="@+id/btnViewMember"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:text="สมาชิก (100)"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btnViewWork"
        app:layout_constraintStart_toStartOf="@+id/btnViewWork"
        app:layout_constraintTop_toBottomOf="@+id/btnViewWork" />

    <Button
        android:id="@+id/btnAddWork"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:background="@color/colorPrimary"
        android:text="เพิ่มงาน"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="491dp"
        android:layout_height="57dp"
        android:background="@color/colorThird"
        android:gravity="center_vertical"
        android:paddingLeft="70dp"
        android:text="OOP"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnViewWork"
        android:layout_width="251dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="@color/colorPrimary"
        android:text="ดูงาน (1)"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="@+id/btnAddWork"
        app:layout_constraintStart_toStartOf="@+id/btnAddWork"
        app:layout_constraintTop_toBottomOf="@+id/btnAddWork" />

</android.support.constraint.ConstraintLayout>