<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".profileActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/user_headEditText_title2"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        android:text="นามสกุล*"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_lastname"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="นามสกุล*" />

    <TextView
        android:id="@+id/user_statusEditText_title"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="64dp"
        android:text="สถานะของคุณ"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_status"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="สถานะของคุณ" />

    <TextView
        android:id="@+id/user_headEditText_title_1"
        android:layout_width="90dp"
        android:layout_height="20dp"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="64dp"
        android:text="ชื่อ*"
        android:textAlignment="viewStart"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ชื่อ*" />

    <TextView
        android:id="@+id/user_head_temp"
        android:layout_width="115dp"
        android:layout_height="33dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="24dp"
        android:text="รหัสนักศึกษา"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="รหัสนักศึกษา" />

    <TextView
        android:id="@+id/user_head_title"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="24dp"
        android:text="รหัสนักศึกษา :"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="รหัสนักศึกษา :" />

    <EditText
        android:id="@+id/edit_lastname"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="นามสกุลของคุณ"
        android:inputType="textPersonName"
        android:text="สร้อยทอง"
        app:layout_constraintEnd_toEndOf="@+id/edit_name"
        app:layout_constraintStart_toStartOf="@+id/edit_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_name" />

    <EditText
        android:id="@+id/edit_status"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:hint="คุณกำลังคิดอะไรอยู่?"
        android:inputType="textPersonName"
        android:text="วิชานี้ยากจังเลยครับ..."
        app:layout_constraintEnd_toEndOf="@+id/edit_lastname"
        app:layout_constraintStart_toStartOf="@+id/edit_lastname"
        app:layout_constraintTop_toBottomOf="@+id/edit_lastname" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:ems="10"
        android:hint="ชื่อของคุณ"
        android:inputType="textPersonName"
        android:text="สมชาย"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Submitbutton"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorPrimary"
        android:text="@string/submit_btn"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/edit_status"
        app:layout_constraintStart_toStartOf="@+id/edit_status"
        app:layout_constraintTop_toBottomOf="@+id/edit_status" />
</android.support.constraint.ConstraintLayout>