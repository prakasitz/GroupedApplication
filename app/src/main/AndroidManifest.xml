<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="th.ac.kmitl.groupedapplication">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ProjectAddActivity"
            android:label="@string/title_activity_project_create"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ProjectActivity"
            android:label="@string/title_activity_project"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".MemberActivity"
            android:label="@string/title_activity_member"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".GroupActivity"
            android:label="@string/titile_activity_member"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
        android:name=".ClassroomActivity"
        android:label="@string/title_activity_classroom"
        android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassroomJoinActivity"
            android:label="@string/title_ativity_class_join"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassroomShowIDActivity"
            android:label="@string/title_activity_classroom_id"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ClassroomCreateActivity"
            android:label="@string/title_activity_classroom_create"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ClassMenuActivity"
            android:label="@string/title_activity_classroom_menu"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SignupActivity"
            android:label="@string/title_activity_signup" />

        <activity
            android:name=".RandGroupActivity"
            android:label="สุ่มคน">
        </activity>
</application>

</manifest>